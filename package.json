    "spacetime": "^6.16.1",
    "suncalc": "^1.8.0",
    "web-animations-js": "^2.3.1"
  },
  "devDependencies": {
    "@fleker/gents": "^1.1.1",
    "@types/node": "^15.12.5",
    "@webcomponents/webcomponentsjs": "^2.0.0",
